/**
 * @param dataRow
 */
{template .btnCancel}
  <button class="btn btn-xs btn-danger btn-withdraw-cancel" data-row="{$dataRow}" >
   {msg desc="Cancel"}Cancel{/msg}
   <i class="icon-white icon-remove"></i>
  </button>
{/template}

/**
 * @param dataRow
 */
{template .btnUserCancel}
  <button class="btn btn-xs btn-danger btn-withdraw-user-cancel" data-row="{$dataRow}" >
   {msg desc="Cancel"}Cancel{/msg}
   <i class="icon-white icon-remove"></i>
  </button>
{/template}

/**
 * @param dataRow
 */
{template .btnProgress}
  <button class="btn btn-xs btn-primary btn-withdraw-progress" data-row="{$dataRow}" >
   {msg desc="Withdraw progress button label in the  broker's withdraw list"}Set in progress{/msg}
  </button>
{/template}

/**
 * @param dataRow
 */
{template .btnComplete}
  <button class="btn btn-xs btn-success btn-withdraw-complete" data-row="{$dataRow}" >
   {msg desc="Withdraw progress button label in the  broker's withdraw list"}Set as complete{/msg}
  </button>
{/template}

/**
 * @param userVerification
 */
{template .btnKYC}
  <button class="btn btn-xs btn-warning btn-withdraw-kyc" data-row="{$userVerification}">
   {msg desc="KYC"}KYC{/msg}
  </button>
{/template}

/**
 * @param dataRow
 */
{template .btnComment}
  <button class="btn btn-xs btn-warning btn-withdraw-comment" data-row="{$dataRow}">
   {msg desc="Comments"}Comments{/msg}
  </button>
{/template}


/**
 * @param link
 */
{template .btnBlockchain}
  <a class="btn btn-xs btn-info btn-btc-blockchain" href="{$link}" target="_blank">
   {msg desc="blockchain"}blockchain{/msg}
   <i class="glyphicon glyphicon-share"></i>
  </a>
{/template}

/**
 * @param dataRow
 */
{template .btnQR}
  <button class="btn btn-xs btn-info btn-withdraw-list-qr" data-action="SHOW_QR"
   data-row="{$dataRow}">
   {msg desc="qrcode"}qrcode{/msg}
   <i class="glyphicon glyphicon-qrcode"></i>
  </button>
{/template}

/**
 * @param dataRow
 */
{template .btnRedo}
  <button class="btn btn-xs btn-default btn-withdraw-redo" data-row="{$dataRow}">
   {msg desc="Redo"}Redo{/msg}
   <i class="glyphicon glyphicon-refresh"></i>
  </button>
{/template}

/**
 * @param link
 */
{template .btnBrokerReceipt}
  <a class="btn btn-xs btn-primary btn-btc-blockchain" href="{$link}" target="_blank" >
   {msg desc="view"}view{/msg}
   <i class="glyphicon glyphicon-eye-open"></i>
  </a>
{/template}
